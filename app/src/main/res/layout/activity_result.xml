<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.ResultActivity">

    <ImageView
        android:id="@+id/best"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="80sp"
        android:layout_marginTop="30sp"
        android:src="@drawable/best" />

    <TextView
        android:id="@+id/txt_best_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/best"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0sp"
        android:text="10"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layout_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_best_score"
        android:layout_centerInParent="false"
        android:layout_marginTop="10sp">

        <ImageView
            android:id="@+id/score"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/score"
            android:tint="@color/colorAccent"/>

        <TextView
            android:id="@+id/txt_result_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/score"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20sp"
            android:text="99"
            android:textColor="@color/colorAccent"
            android:textSize="80sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_play_again"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@id/layout_score"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/background_play"
        android:backgroundTint="@color/button_answer_2"
        android:padding="10sp"
        android:scaleType="fitCenter"
        android:src="@drawable/playagain" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/btn_play_again"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_below="@id/layout_score"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="2sp"
            android:layout_weight="1"
            android:background="@drawable/background_play"
            android:padding="10sp"
            android:scaleType="fitCenter"
            android:src="@drawable/homepage"
            android:tint="#5B8E7D" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_below="@id/layout_score"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="30sp"
            android:layout_weight="1"
            android:background="@drawable/background_play"
            android:padding="10sp"
            android:scaleType="fitCenter"
            android:src="@drawable/share"
            android:tint="#5B8E7D" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_fragment_ad"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </FrameLayout>
</RelativeLayout>
